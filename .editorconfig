# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2

[*.rst]
indent_style = space
indent_size = 3

[*.neon]
indent_style = tab
